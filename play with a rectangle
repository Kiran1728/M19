<head>
  <title>replit</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
    }
    h2 {
      text-align: center;
    }
    .rectangle {
      border: 2px solid black;
      width: 200px;
      height: 200px;
      margin: auto;
      background: white;
      transition: all 0.5s ease;
    }
    .buttons {
      margin-top: 20px;
    }
    button {
      padding: 10px;
      margin: 5px;
      cursor: pointer;
      border: none;
      background: darkblue;
      color: white;
      border-radius: 5px;
      transition: 0.3s;
    }
    button:hover {
      background: royalblue;
    }
  </style>
</head>

<body>
   <h2>Make changes to the rectangle</h2>
   <div class="rectangle"></div>
   <div class="buttons">
     <button onclick="changeToCircle()">Make Circle</button>
     <button onclick="hide()">Hide</button>
     <button onclick="show()">Show</button>
   </div>
  
  <script>
    let div = document.querySelector('.rectangle');

    function changeToCircle() {
      div.style.borderRadius = "50%";
    }
    
    function hide() {
      div.style.opacity = "0"; // Smooth fade-out effect
      setTimeout(() => div.style.display = "none", 500);
    }

    function show() {
      div.style.display = "block";
      setTimeout(() => div.style.opacity = "1", 50); // Fade-in effect
    }

    div.onmouseenter = function () {
      div.style.background = 'red';
    }
    
    div.onmouseout = function () {
      div.style.background = 'white'; // Prevents disappearing issue
    }
  </script>

</body>
</html>
