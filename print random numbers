<!DOCTYPE html>
<html>
<body>

<h2>JavaScript Datatypes, Let keyword and Loops</h2>

<p id="result"></p>

<script>
// Declare text variable to hold the output
var text = " ";
{
  // Declare i inside block scope using let
  let i = 0; 
  while (i < 10) {
    text += "The values inside the block: " + i + "</br>";
    i++;
  }
  document.getElementById("result").innerHTML = text;
}

// Declare i globally with var
var i = 10;
document.write("The value of i outside the block is: " + i);
</script>

</body>
</html>
