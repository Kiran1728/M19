            // Using variables
            let name = "Sumit";
            let favouriteSubject = "Math";
            let grade = 5;
            let message = `My name is ${name}. I study in grade ${grade}. My favourite subject is ${favouriteSubject}.`;
            
            console.log(message);
            document.getElementById("output").textContent = message;

